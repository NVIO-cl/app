doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title Login - NVIO
    link(rel='stylesheet' href='https://nvio.s3.amazonaws.com/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.12.0/css/all.css')
.container
    .row.justify-content-center
        .col-md-9.col-lg-12.col-xl-10
            .card.shadow-lg.o-hidden.border-0.my-5
                .card-body.p-0
                    .row
                        .col-lg-6.d-none.d-lg-flex
                            .flex-grow-1.bg-login-image(style='background-image: url("https://nvio.s3.amazonaws.com/assets/img/dogs/image3.jpeg");')
                        .col-lg-6
                            .p-5
                                .text-center(style='padding: 10px;')
                                    img(src='https://nvio.s3.amazonaws.com/assets/img/logo_nvio_fondo.png' style='width: 100%;')
                                form.user
                                    .form-group
                                        input#exampleInputEmail.form-control.form-control-user(type='email' aria-describedby='emailHelp' placeholder='Dirección de correo' name='email')
                                    .form-group
                                        input#exampleInputPassword.form-control.form-control-user(type='password' placeholder='Contraseña' name='password')
                                    .form-group
                                        .custom-control.custom-checkbox.small
                                            .form-check
                                                input#formCheck-1.form-check-input.custom-control-input(type='checkbox')
                                                label.form-check-label.custom-control-label(for='formCheck-1') Recordarme
                                    a.btn.btn-primary.btn-block.text-white.btn-user(role='button' href='/index.html' style='background: #058791;') Ingresar
                                    hr
                                    a.btn.btn-primary.btn-block.text-white.btn-google.btn-user(role='button')
                                        i.fab.fa-google
                                        | &nbsp; Ingresar con Google
                                    a.btn.btn-primary.btn-block.text-white.btn-facebook.btn-user(role='button')
                                        i.fab.fa-facebook-f
                                        | &nbsp; Ingresar con Facebook
                                    hr
                                .text-center
                                    a.small(href='') &iquest;Olvidaste tu contrase&ntilde;a?
                                .text-center
                                    a.small(href='/register.html') Reg&iacute;strate aqu&iacute;
script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js')
script(src='https://nvio.s3.amazonaws.com/assets/js/script.min.js')
